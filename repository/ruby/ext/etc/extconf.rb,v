def etc_grep_header(field)
  f = open("conftest.c", "w")
  f.print <<EOF
#include <pwd.h>
EOF
  f.close
  begin
    if xsystem("#{CPP} | egrep #{field}")
      $defs.push(format("-D%s", field.upcase))
    end
  ensure
    system "rm -f conftest.c"
  end
end

